<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}admin{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/cosmo/bootstrap.min.css">
        <!--<link rel="stylesheet" href="http://localhost/projet/bootswatch/bootstrap.min.css">-->
        {% block stylesheets %}
        <style>
            body{
                background-color: #F5F5F5;
            }
        </style>
        {% endblock %}
    </head>
    <body>
    {% if not app.user %}
        <script>window.location.href = "/back/public/index.php/login"</script>
    {% else %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="http://www.nl-technologie.com/">NL-Technologie</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/back/public/index.php/home">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('affiche_recrut') }}">Recrutement</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('read_equipe') }}">Equipe</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('read_message') }}">Visiteurs</a>
                </li>
            </ul>
            <form action="{{ path('logout') }}" class="form-inline my-2 my-lg-0">
                <button class="btn btn-outline-secondary" type="submit"><b>Deconnecter</b></button>
            </form>
        </div>
    </nav>

            <div class="container">
                {% block body %}{% endblock %}
            </div>
    {% endif %}

        {% block javascripts %}{% endblock %}
    </body>
</html>
